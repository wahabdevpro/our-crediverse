<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.concurrent.creditsharing.SubscribedActivity" >

    <TextView
        android:id="@+id/benefitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:text="This service allows you to share credit with your beneficiaries"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/beneficiariesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/benefitTextView"
        android:layout_marginTop="20dp"
        android:onClick="onBeneficiaries"
        android:text="Beneficiaries" />

    <Button
        android:id="@+id/balancesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beneficiariesButton"
         android:onClick="onBalances"
        android:text="View Balances" />

    <Button
        android:id="@+id/unsubscribeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/balancesButton"
        android:onClick="onUnsubscribe"
        android:text="Unsubscribe" />
    
        <TextView
        android:id="@+id/tellMeMoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unsubscribeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="onTellMeMore"
        android:text="@string/link_tell_me_more"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2570E0" />
    

</RelativeLayout>