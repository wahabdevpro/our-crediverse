<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tx_history_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="16dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="5dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/main_tx_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            app:flexDirection="column"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                app:alignItems="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp"
                    app:layout_flexGrow="1">

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tx_history_icon"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/fa_solid"
                            android:paddingVertical="4dp"
                            android:text="@string/fa_retro_mobile"
                            android:textAlignment="center"
                            android:textColor="@color/dark_gray"
                            android:textSize="20sp"
                            app:layout_minWidth="26dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_alignSelf="center"
                            app:layout_flexGrow="1">

                            <TextView
                                android:id="@+id/tx_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="{Amount}"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tx_bound_icon"
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/fa_solid"
                                android:paddingVertical="4dp"
                                android:rotation="-45"
                                android:text="@string/fa_arrow_right"
                                android:textAlignment="center"
                                android:textColor="@color/danger"
                                android:textSize="16sp"
                                app:layout_minWidth="24dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tx_datestamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="{Datestamp}"
                            android:textAlignment="textEnd"
                            android:textSize="12sp"
                            app:layout_alignSelf="center" />

                    </com.google.android.flexbox.FlexboxLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="2dp"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tx_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="{TX-Type}"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tx_reference"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="REF: {Ref}"
                                    android:textAlignment="textEnd"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintWidth_percent="@fraction/right_bias_55" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="2dp"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/tx_b_party"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="{TX-TO/FROM}"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintWidth_percent="@fraction/left_bias_45" />

                                <TextView
                                    android:id="@+id/status_value"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:text="{Status}"
                                    android:textAlignment="textEnd"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintWidth_percent="@fraction/right_bias_55"
                                    tools:ignore="HardcodedText" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="8dp"
                    tools:ignore="RtlSymmetry">

                </LinearLayout>

            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/extra_tx_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:flexDirection="column"
            app:layout_constraintTop_toBottomOf="@id/main_tx_info"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/top_border"
                android:orientation="horizontal" />

            <include
                android:id="@+id/item_description_line_item"
                layout="@layout/template_sale_history_line_item" />

            <include
                android:id="@+id/profit_line_item"
                layout="@layout/template_sale_history_line_item" />

            <include
                android:id="@+id/trade_bonus_line_item"
                layout="@layout/template_sale_history_line_item" />

            <include
                android:id="@+id/commission_line_item"
                layout="@layout/template_sale_history_line_item" />

            <include
                android:id="@+id/my_balance_after_line_item"
                layout="@layout/template_sale_history_line_item" />

            <include
                android:id="@+id/follow_up_line_item"
                layout="@layout/template_sale_history_line_item" />

            <include
                android:id="@+id/rolled_back_line_item"
                layout="@layout/template_sale_history_line_item" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/repeat_sale_button_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/repeat_sale_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/repeat_sale"
                    app:icon="@drawable/ic_baseline_history_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="@fraction/left_bias_45"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.flexbox.FlexboxLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>