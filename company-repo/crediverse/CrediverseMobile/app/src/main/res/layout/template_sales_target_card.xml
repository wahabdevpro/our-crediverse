<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/team_sales_target_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    app:cardUseCompatPadding="true">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:flexDirection="column">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            app:alignItems="center"
            app:justifyContent="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/team_sales_target_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sales_target_title"
                android:elevation="0dp"
                android:src="@drawable/bullseye"
                android:theme="@style/Theme.AppCompat"
                app:backgroundTint="@color/cs_primary"
                app:backgroundTintMode="src_over"
                app:fabCustomSize="38dp"
                app:maxImageSize="20dp"
                app:tint="@color/white"
                tools:ignore="ImageContrastCheck"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:alignItems="center"
                app:flexDirection="column"
                app:justifyContent="center">

                <TextView
                    android:id="@+id/team_sales_target_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/sales_target_title"
                    android:textAlignment="center"
                    android:textSize="22sp" />


            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="12dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingHorizontal="8dp"
                app:alignItems="center"
                app:flexDirection="column"
                app:justifyContent="center"
                app:layout_flexGrow="1">

                <TextView
                    android:id="@+id/total_sales_target_team_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:text="@string/weekly_target"
                    android:textAlignment="center"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_sales_target_team_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/c_not_set"
                    android:textAlignment="center"
                    android:textColor="@color/dark_gray"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_members_with_sales_target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/total_members_with_sales_target"
                    android:textAlignment="center"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp" />

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingHorizontal="8dp"
                app:alignItems="center"
                app:flexDirection="column"
                app:justifyContent="center"
                app:layout_flexGrow="1">

                <TextView
                    android:id="@+id/achieved_sales_target_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:text="@string/achieved"
                    android:textAlignment="center"
                    android:textColor="@color/medium_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/team_achieved_sales_target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/c_not_set"
                    android:textAlignment="center"
                    android:textColor="@color/medium_gray"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/team_achieved_sales_target_percentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/c_not_set"
                    android:textAlignment="center"
                    android:textColor="@color/medium_gray"
                    android:textSize="15sp" />

            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>

    </com.google.android.flexbox.FlexboxLayout>

</androidx.cardview.widget.CardView>
