<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/agent_feedback_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/faded_background"
        android:elevation="4dp"
        android:paddingHorizontal="8dp"
        android:visibility="invisible"
        tools:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/feedback_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/account_info"
                    android:src="@drawable/ic_baseline_close_24"
                    android:theme="@style/Theme.AppCompat"
                    app:backgroundTint="@color/dark_gray"
                    app:backgroundTintMode="src_over"
                    app:fabCustomSize="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxImageSize="34dp"
                    app:tint="@color/white"
                    tools:ignore="ImageContrastCheck" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/feedback_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="14dp"
                    android:minWidth="220dp"
                    app:cardCornerRadius="9dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="16dp"
                        android:padding="6dp">

                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/feedback_wrapper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:alignItems="center"
                            app:flexDirection="column"
                            app:flexWrap="wrap"
                            app:justifyContent="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/agent_feedback_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/feedback_description_text"
                                android:textAlignment="center"
                                android:textSize="15sp" />

                        </com.google.android.flexbox.FlexboxLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/feedback_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="12dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/feedback_wrapper">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/feedback_message_input"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="top"
                                android:hint="@string/feedback_hint"
                                android:inputType="textMultiLine"
                                android:overScrollMode="always"
                                android:padding="5dp"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:textSize="18sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/feedback_submit_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="28dp"
                            android:paddingHorizontal="24dp"
                            android:text="@string/submit_button_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/feedback_layout" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>