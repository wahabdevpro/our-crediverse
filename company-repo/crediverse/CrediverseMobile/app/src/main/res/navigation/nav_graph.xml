<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="systems.concurrent.crediversemobile.fragments.Home"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SellFragment" />
        <argument
            android:name="bearerToken"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/SellFragment"
        android:name="systems.concurrent.crediversemobile.fragments.AirtimeFragment"
        android:label="@string/sell"
        tools:layout="@layout/fragment_airtime">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
</navigation>