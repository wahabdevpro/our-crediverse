<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CrediverseMobile" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cs_primary</item>
        <item name="colorPrimaryVariant">@color/cs_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cs_alt</item>
        <item name="colorSecondaryVariant">@color/cs_alt_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/cs_primary</item>
        <item name="colorControlHighlight">@color/cs_primary</item>
        <item name="android:textColorHint">@color/cs_hint</item>
    </style>

    <style name="Theme.CrediverseMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CrediverseMobile.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CrediverseMobile.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>