	<script id="singleareaview">
		<div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal"><i class="fa fa-remove"></i> </button>
		    <h4 class="modal-title">{{{dialogTitle}}}</h4>
		</div>
		<div class="modal-body">
			<div class="areadetails">
				<form name="addArea" class="form-horizontal">
					{{>modalInput name="name" label="areas.name" hint="areas.nameHint" value=this.name}}
					{{>modalInput name="type" label="areas.type" hint="areas.typeHint" value=this.type}}
					<div class="form-group">
						<label class="col-xs-4 control-label">{{i18n "areas.parentArea"}}</label>
						<div class="col-xs-8">
							<select id="parentAreaID" name="parentAreaID" class="form-control" style="width: 100%;">													    	
								<option value="{{this.parentAreaID}}" selected="selected">{{this.parentAreaName}}</option>
							</select>
						</div>
					</div>
										
				</form>
			</div>
		</div>
		<div class="modal-footer">
	       	<button type="button" class="btn btn-primary areaSaveButton">{{i18n "global.saveBtn"}}</button>
	       	<button type="button" class="btn btn-default" data-dismiss="modal">{{i18n "global.cancelBtn"}}</button>
		</div>
	</script>
</div>
