<script id="topmsg">
	<p class="login-box-msg loginheading">...</p>
</script>

<script id="coauthmsg">
	<p class="login-box-msg loginheading">...</p>
</script>

<script id="login">
	<div class="signin-box">
		<div class="form-group has-feedback">
			<input id="user" type="text" class="form-control" placeholder="{{userhint}}" /> 
			<span class="glyphicon glyphicon-user form-control-feedback"></span>
		</div>
		<div class="form-group has-feedback passwd-box">
			<input id="pass" type="password" class="form-control" placeholder="{{passhint}}" />
			<span class="glyphicon glyphicon-lock form-control-feedback"></span>
		</div>
		
		<div class="error-div">
			<span class="errortxt errormsg"></span>
		</div>
		
		<div class="row">
			<div class="col-xs-12">
				<button class="btn btn-primary btn-block btn-flat signin disabled">{{signinbtn}}</button>
			</div>
		</div>
	</div>
</script>

<script id="auth">
	<div class="signin-box">
		<div class="form-group has-feedback">
			<input id="user" type="text" class="form-control novalidate" placeholder="{{userhint}}" autocomplete="off" /> 
			<span class="glyphicon glyphicon-user form-control-feedback"></span>
		</div>
		<div class="form-group has-feedback passwd-box">
			<input id="pass" type="password" class="form-control novalidate" placeholder="{{passhint}}" autocomplete="new-password"/>
			<span class="glyphicon glyphicon-lock form-control-feedback"></span>
		</div>
		
		<div class="error-div">
			<span class="errortxt errormsg"></span>
		</div>
		
		<div class="form-group has-feedback">
		    <button disabled="disabled" class="btn btn-primary btn-flat signin disabled col-sm-3 pull-right" style="white-space: inherit ! important;">
			    {{authbtn}}
			      <span class="pull-right">
			        <span class="glyphicon glyphicon-chevron-right">
			        </span>
			      </span>
		    </button>  
		</div>
	</div>
</script>

<script id="wait">
	<div class="signin-box">
		<div class="form-group has-feedback text-center">
			<i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
			<span class="sr-only">{{loadingmsg}}</span>
		</div>
		
		<div class="error-div">
			<span class="errortxt errormsg"></span>
		</div>
		
		<div class="row">
			<div class="col-xs-12">
				<button class="btn btn-default btn-block btn-flat disabled signInGreyedOut">{{signinwaitbtn}}</button>
			</div>
		</div>
		
	</div>
</script>

<script id="pin">
	<div id="type2" class="signin-box">

		<p>{{pinmsg}}</p>

		<div class="form-group has-feedback pin-box">
			<input id="pininput" type="text" class="form-control" placeholder="{{pinhint}}" /> 
			<span class="glyphicon glyphicon-phone form-control-feedback"></span>
		</div>
	
		<div class="error-div">
			<span class="errortxt errormsg">error</span>
		</div>
	
		<div class="row">
			<div class="col-xs-12">
				<button class="btn btn-primary btn-block btn-flat pinin disabled">{{pinbtn}}</button>
			</div>
		</div>
	
		<div class="row">
			<div class="col-xs-6">
		    	<div class="checkbox icheck">
					<label>
						<a href="#" class="resendPIN">{{resendlbl}}</a>
					</label>
					</div>
			</div>
			<div class="col-xs-6">
		    	<div class="checkbox icheck pull-right">
					<label>
						<a href="#" class="reSignIn">{{reloginlbl}}</a>
					</label>
				</div>
			</div>
		</div>
	</div>
</script>

