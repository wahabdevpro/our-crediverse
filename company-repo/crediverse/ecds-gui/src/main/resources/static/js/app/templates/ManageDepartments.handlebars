<div>
	
	<script id="managedepartments">
		<div class="datatablesview col-xs-12">
			<div class="row">
			<div class="coop col-xs-12">
			</div>
			</div>
			<div class="box">
				<div class="box-header">
					<div class="pull-right">
						{{#hasPerms "Batch_Download"}}
							<button class="btn btn-primary exportDepartmentsButton" role="button">{{i18n "global.exportBtn"}}</button>
						{{/hasPerms}}
						{{#hasPerms "Batch_Upload"}}
							<a href="#batch" class="btn btn-primary routerlink" role="button">{{i18n "global.importBtn"}}</a>
						{{/hasPerms}}
						{{#hasPerms "Department_Add"}}
							<button class='btn btn-primary createDepartmentButton'>{{i18n "departments.addDepartmentBtn"}}</button>
						{{/hasPerms}}
					</div>
				</div>
				<div class="box-body">
					<table class="tableview  table table-bordered table-hover table-striped">
					</table>
				</div>
			</div>
		</div>
	</script>
	
	<script id="singledepartmentview">
		<div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal"><i class="fa fa-remove"></i> </button>
		    <h4 class="modal-title">{{{dialogTitle}}}</h4>
		</div>
		<div class="modal-body">
			<div class="departmentdetails">
				<form name="addDepartment" class="form-horizontal">
					{{>modalInput name="name" label="global.name" hint="departments.departmentNameHint" value=this.name}}
				</form>
			</div>
		</div>
		<div class="modal-footer">
	       	<button type="button" class="btn btn-primary departmentSaveButton">{{i18n "global.saveBtn"}}</button>
	       	<button type="button" class="btn btn-default" data-dismiss="modal">{{i18n "global.cancelBtn"}}</button>
		</div>
	</script>
	
</div>
