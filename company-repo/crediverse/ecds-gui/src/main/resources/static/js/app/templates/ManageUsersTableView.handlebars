	                	<button type="button" class="btn btn-default" data-dismiss="modal">{{i18n "global.cancelBtn"}}</button>
	            	</div>
	            </div>
				
		    </div>
		</div>
		
		<div id="editUserRolesModal" class="modal fade">
			<div class="modal-dialog">
				<div class="modal-content">
				
					<div class="modal-header">
						<h3 class="modal-title">Set in Object</h3>
					</div>
					
					<div class="modal-body">
						Vat hom Flaffie!
					</div>
						
		            <div class="modal-footer">
	                	<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	                	<button type="button" class="btn btn-primary userCreateButton">Accept</button>
	            	</div>
				</div>
			</div>
		</div>
	</script>
	
