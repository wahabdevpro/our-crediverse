							{{>modalInput name="firstName" label="userman.firstName" hint="userman.firstNameHint" }}
							{{>modalInput name="surname" label="userman.surname" hint="userman.surnameHint" }}
							{{>modalInput name="initials" label="userman.initials" hint="userman.initialsHint" }}

