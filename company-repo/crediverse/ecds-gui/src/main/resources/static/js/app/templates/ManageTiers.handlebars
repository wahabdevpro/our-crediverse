<div>
	
	<script id="tiermasterdialog">
		<div id="tierModal" class="modal fade">
		    <div class="modal-dialog">
		    
		    	<div class="modal-content">
	            	<div class="modal-header">
                		<button type="button" class="close" data-dismiss="modal"><i class="fa fa-remove"></i> </button>
                		<h4 class="modal-title">...</h4>
            		</div>
    				
    				<div class="modal-body">
    					<form name="tierForm" class="form-horizontal">
							{{>modalInput  name="name" label="global.name" hint="Tier Name Identifier" }}
							{{>modalInput  name="description" label="global.description" hint="Tier Description" }}
							
							<div class="form-group required">
								<label class="col-xs-4 control-label">{{i18n "tiers.type"}}</label>
								<div class="col-xs-8">
									<select id="type" name="type" class="form-control">
										<option value="">{{i18n "tiers.typeHint"}}</option>
										<option value="R">{{i18n "enums.tierType.retailer"}}</option>
										<option value="T">{{i18n "enums.tierType.store"}}</option>
										<option value="W">{{i18n "enums.tierType.wholesaler"}}</option>
									</select>
								</div>
							</div>
							<div class="form-group required">
								<label class="col-xs-4 control-label">{{i18n "global.state"}}</label>
								<div class="col-xs-8">
									<select id="state" name="state" class="form-control" value="{{this.state}}">
										<option value="">{{i18n "global.stateHint"}}</option>
										<option value="A">{{i18n "enums.state.active"}}</option>
										<option value="I">{{i18n "enums.state.inactive"}}</option>
									</select>
								</div>
							</div>
							
							<div class="row form-group required dialog-spacing" style="margin-bottom:7px;">
								<label class="col-xs-4 control-label">{{i18n "tiers.allowIntraTierTransfer"}}</label>
								<div class="col-xs-8" style="margin-top:5px;">
									<div class="pull-left" style="margin-right:40px;">
										<input id="allowIntraTierTransfer-yes" name="allowIntraTierTransfer" value="true" class="allowIntraTierTransfer-dumps custom-radio-fa" type="radio" {{#ifCond this.allowIntraTierTransfer "==" true}}checked="checked"{{/ifCond}}/>
										<label for="allowIntraTierTransfer-yes">{{i18n "enums.yesNo.yes"}}</label>
									</div>
									<div class="pull-left">
										<input id="allowIntraTierTransfer-no" name="allowIntraTierTransfer" value="false" class="allowIntraTierTransfer-dumps custom-radio-fa" type="radio" {{#ifCond this.allowIntraTierTransfer "!=" true}}checked="checked"{{/ifCond}}/>
										<label for="allowIntraTierTransfer-no">{{i18n "enums.yesNo.no"}}</label>
									</div>							
								</div>	
							</div>
							
							{{>modalInput  name="buyerDefaultTradeBonusPercentage" label="tiers.buyerDefaultTradeBonusPercentage" hint="tiers.buyerDefaultTradeBonusPercentage" }}
							{{>modalInputNumber  name="maxTransactionAmount" label="global.maxTransactionAmount" hint="global.maxTransactionAmountHint" }}
							{{>modalInputNumber  name="maxDailyCount" label="global.maxDailyCount" hint="global.maxDailyCountHint" }}
							{{>modalInputNumber  name="maxDailyAmount" label="global.maxDailyAmount" hint="global.maxDailyAmountHint" }}						
							{{>modalInputNumber  name="maxMonthlyCount" label="global.maxMonthlyCount" hint="global.maxMonthlyCountHint" }}
							{{>modalInputNumber  name="maxMonthlyAmount" label="global.maxMonthlyAmount" hint="global.maxMonthlyAmountHint" }}
						</form>
    				</div>
    				
		            <div class="modal-footer">
	                	<button type="button" class="btn btn-primary tierCreateButton">{{i18n "global.saveBtn"}}</button>
	                	<button type="button" class="btn btn-default" data-dismiss="modal">{{i18n "global.cancelBtn"}}</button>
	            	</div>
	            </div>
				
		    </div>
		</div>
	</script>
	
	<script id="tiermaster">
	    <div class="datatablesview col-xs-12">
	        <div class="box">
	            <div class="box-header">
	                <div class='pull-right'>
	                	{{#hasPerms "Batch_Download"}}
	                		<button class="btn btn-primary exportTiersButton" role="button">{{i18n "global.exportBtn"}}</button>
	                	{{/hasPerms}}
	                	{{#hasPerms "Batch_Upload"}}
	                		<a href="#batch" class="btn btn-primary routerlink" role="button">{{i18n "global.importBtn"}}</a>
	                	{{/hasPerms}}
	                	{{#hasPerms "Tier_Add"}}
	                    	<button class='btn btn-primary createTierButton'>{{i18n "tiers.addTierBtn"}}</button>
	                    {{/hasPerms}}
	                </div>
	            </div>
	            <div class="box-body">
		            <table class="tableview table table-bordered table-hover table-striped">
		            </table>
	            </div>
	        </div>
	    </div>
	</script>
</div>
