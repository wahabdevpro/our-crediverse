<div>

	<script id="profiledialogview">
		<div class="modal-header">
    		<button type="button" class="close" data-dismiss="modal"><i class="fa fa-remove"></i> </button>
    		<h4 class="modal-title">{{{dialogTitle}}}</h4>
		</div>	
	
		<div class="modal-body">
			<div class="groupdetails">
				<form name="addUser" class="form-horizontal">    						
					{{>modalSelect name="title" label="profile.viewTitleLabel" data="mr:Mr,miss:Miss,mrs:Mrs,dr:Dr,prof:Prof" hint="profile.viewTitleLabel" value=this.title }}
					
					{{>modalInput name="firstName" label="profile.viewFirstNameLabel" hint="profile.viewFirstNameLabel" value=this.firstName }}
					{{>modalInput name="surname" label="profile.viewSurnameLabel" hint="profile.viewSurnameLabel" value=this.surname }}
					{{>modalInput name="initials" label="profile.viewInitialsLabel" hint="profile.viewInitialsLabel" value=this.initials }}
					{{>modalSelect name="language" label="profile.viewLanguageLabel" 
						data="en:enums.langType.en,fr:enums.langType.fr" 
						hint="profile.viewLanguageLabel" value=this.language
					}}

					{{>modalInput name="email" type="email" label="profile.viewEmailLabel" hint="profile.viewEmailLabel" value=this.email}}
					
					{{>modalInput name="altPhoneNumber" label="profile.viewaltPhoneNumberLabel" hint="profile.viewaltPhoneNumberLabel" value=this.altPhoneNumber}}
					
					{{>modalInputNumber currency="true" name="warningThreshold" label="profile.viewWarningThresholdLabel" hint="profile.viewWarningThresholdLabel" value=this.warningThreshold}}
					
					
