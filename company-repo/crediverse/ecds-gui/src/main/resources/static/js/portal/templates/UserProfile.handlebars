						{{>modalInput name="streetAddressCity" 		label="profile.viewStreetAddressCityLabel" hint="profile.viewStreetAddressCityLabel" value=this.streetAddressCity}}
						{{>modalInput name="streetAddressZip" 		label="profile.viewStreetAddressZipLabel" hint="profile.viewStreetAddressZipLabel" value=this.streetAddressZip}}
					
					</div>
					
					<div class="info-panel">
						<h4>{{i18n "profile.viewPostalAddressHeading"}}</h4>
						{{>modalInput name="postalAddressLine1" label="profile.viewPostalAddressLine1Label" hint="profile.viewPostalAddressLine1Label" value=this.postalAddressLine1}}
						{{>modalInput name="postalAddressLine2" label="profile.viewPostalAddressLine2Label" hint="profile.viewPostalAddressLine2Label" value=this.postalAddressLine2}}
